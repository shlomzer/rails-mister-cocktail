<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>

      <% @cocktail.doses.each do |dose|%>
        <%= dose.description %>
        <%= dose.ingredient.name %>
        <%= link_to 'Delete dose', dose_path(dose), method: :delete %>
      <br>
      <% end %>
    </div>
    <% if @cocktail.photo? %>
  <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
<% end %>
  </div>
  <%= link_to 'Back', cocktails_path %>
  <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
</div>

<div class='container'>
  <%= render 'doses/form' %>
</div>
